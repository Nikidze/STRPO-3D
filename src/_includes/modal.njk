<!-- Модальное окно -->
 <div 
        x-data="{ 
            isOpen: false,
            init() {
                this.$watch('isOpen', (value) => {
                    if (value) {
                        document.body.style.overflow = 'hidden';
                    } else {
                        document.body.style.overflow = '';
                    }
                });
            }
        }" 
        @open-modal.document="isOpen = true"
        @keydown.escape.window="isOpen = false"
        x-show="isOpen" 
        x-cloak
        x-transition:enter="transition opacity-0 pointer-events-none duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition opacity-100 duration-300"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-[100] flex items-center justify-center p-4 bg-brand-darkBlue bg-opacity-95 backdrop-blur-sm"
    >
    <div @click.away="isOpen = false" class="bg-white w-full max-w-lg p-6 md:p-10 rounded-sm shadow-2xl relative border-t-8 border-brand-coral">
        <button @click="isOpen = false" class="absolute top-4 right-4 text-3xl font-light text-brand-darkBlue hover:text-brand-coral transition">&times;</button>
        <h2 class="text-2xl md:text-3xl font-black mb-2 text-brand-darkBlue uppercase italic">ЗАПРОС РАСЧЕТА</h2>
        <p class="text-gray-500 text-[10px] uppercase font-bold tracking-widest mb-8 opacity-60">Бесплатный расчет стоимости в течение 2-х часов</p>
        
        <form class="space-y-6">
            <!-- Имя и Телефон -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    <label class="block text-[9px] uppercase font-black text-gray-400 tracking-widest mb-1">Имя</label>
                    <input type="text" class="w-full bg-gray-50 border-b-2 border-brand-lightPurple p-3 text-xs focus:border-brand-golden outline-none transition uppercase font-bold tracking-tighter">
                </div>
                <div>
                    <label class="block text-[9px] uppercase font-black text-gray-400 tracking-widest mb-1">Телефон</label>
                    <input type="tel" class="w-full bg-gray-50 border-b-2 border-brand-lightPurple p-3 text-xs focus:border-brand-golden outline-none transition uppercase font-bold tracking-tighter">
                </div>
            </div>

             <!-- Сообщение -->
            <div>
                <label class="block text-[9px] uppercase font-black text-gray-400 tracking-widest mb-1">Сообщение</label>
                <textarea rows="3" class="w-full bg-gray-50 border-b-2 border-brand-lightPurple p-3 text-xs focus:border-brand-golden outline-none transition uppercase font-bold tracking-tighter"></textarea>
            </div>

            <!-- Интерактивная Загрузка Файла (STL) -->
            <div 
                x-data="{ 
                    dragging: false,
                    fileName: '',
                    handleFile(files) {
                        if (files && files.length > 0) {
                            this.fileName = files[0].name;
                            this.$refs.fileInput.files = files;
                        }
                        this.dragging = false;
                    },
                    clearFile() {
                        this.fileName = '';
                        this.$refs.fileInput.value = '';
                    }
                }"
                @dragover.prevent="dragging = true"
                @dragleave.prevent="dragging = false"
                @drop.prevent="handleFile($event.dataTransfer.files)"
                class="relative group"
            >
                <label class="block text-[9px] uppercase font-black text-gray-400 tracking-widest mb-1">Файл (STL)</label>
                
                <!-- Скрытый инпут -->
                <input 
                    type="file" 
                    x-ref="fileInput" 
                    class="hidden" 
                    accept=".stl,application/octet-stream"
                    @change="handleFile($event.target.files)"
                >

                <!-- Область дроп-зоны -->
                <div 
                    class="relative w-full border-2 border-dashed rounded-sm transition-all duration-300 cursor-pointer overflow-hidden bg-gray-50"
                    :class="dragging ? 'border-brand-coral bg-brand-lightPurple bg-opacity-10' : 'border-brand-lightPurple hover:border-brand-golden'"
                    @click="$refs.fileInput.click()"
                >
                    <!-- Состояние "Пусто" (инструкция) -->
                    <div 
                        class="flex flex-col items-center justify-center py-5 transition-all duration-300"
                        :class="fileName ? 'opacity-0 h-0 overflow-hidden' : 'opacity-100'"
                    >
                        <svg class="w-8 h-8 text-brand-darkBlue opacity-30 mb-2 group-hover:text-brand-coral transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                        </svg>
                        <p class="text-[9px] uppercase font-bold text-brand-darkBlue tracking-wider">Нажмите или перетащите файл</p>
                        <p class="text-[9px] text-gray-400 uppercase tracking-widest mt-1">Формат STL</p>
                    </div>

                    <!-- Состояние "Файл выбран" -->
                    <div 
                        x-show="fileName"
                        x-transition
                        class="absolute inset-0 flex items-center justify-between px-4 py-3 bg-white"
                    >
                        <div class="flex items-center gap-3 overflow-hidden">
                            <div class="p-2 bg-brand-coral bg-opacity-10 rounded-full">
                                <svg class="w-4 h-4 text-brand-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                            </div>
                            <div class="flex flex-col min-w-0">
                                <span class="text-[9px] text-gray-400 uppercase tracking-widest">Загружен</span>
                                <span x-text="fileName" class="text-xs font-bold text-brand-darkBlue tracking-tight truncate"></span>
                            </div>
                        </div>
                        <button 
                            type="button" 
                            @click.stop="clearFile" 
                            class="text-gray-400 hover:text-red-500 p-1 transition"
                            title="Удалить файл"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                        </button>
                    </div>
                </div>
            </div>

            <button type="submit" class="w-full bg-brand-coral text-white font-black py-4 rounded-sm hover:-translate-y-1 transition-all uppercase tracking-[0.2em] italic text-xs">
                ОТПРАВИТЬ НА РАСЧЕТ
            </button>
        </form>
    </div>
</div>