<!-- Навигация -->
<header x-data="{ mobileMenuOpen: false }" class="sticky top-0 z-40 bg-white border-b border-gray-100 shadow-sm">
    <div class="container mx-auto px-4 md:px-6 py-4 flex justify-between items-center">
        <a href="index.html" class="flex items-center space-x-2" title="TechPrint NN - Главная">
            <div class="w-8 h-8 bg-brand-darkBlue rounded flex items-center justify-center text-white font-black text-sm">3D</div>
            <span class="text-lg md:text-xl font-bold tracking-tight text-brand-darkBlue uppercase">TechPrint <span class="text-brand-golden">NN</span></span>
        </a>
        
        <nav class="hidden lg:flex items-center space-x-8 text-xs font-bold uppercase tracking-widest text-gray-600">
            <a href="index.html" class="{% if page.fileSlug == '' %}text-brand-darkBlue border-b-2 border-brand-golden pb-1{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Главная
            </a>
            <a href="services.html" class="{% if page.fileSlug == 'services' %}text-brand-darkBlue border-b-2 border-brand-golden pb-1{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Услуги
            </a>
            <a href="prices.html" class="{% if page.fileSlug == 'prices' %}text-brand-darkBlue border-b-2 border-brand-golden pb-1{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Цены
            </a>
            <a href="cases.html" class="{% if page.fileSlug == 'cases' %}text-brand-darkBlue border-b-2 border-brand-golden pb-1{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Кейсы
            </a>
            <a href="contacts.html" class="{% if page.fileSlug == 'contacts' %}text-brand-darkBlue border-b-2 border-brand-golden pb-1{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Контакты
            </a>
        </nav>

        <div class="flex items-center space-x-4">
            <button @click="$dispatch('open-modal')" class="italic hidden md:block bg-brand-darkBlue text-white px-5 py-2 rounded-sm text-[10px] font-black tracking-widest hover:bg-opacity-90 transition">
                ЗАКАЗАТЬ 3D-ПЕЧАТЬ
            </button>
            <button @click="mobileMenuOpen = !mobileMenuOpen" class="lg:hidden text-brand-darkBlue focus:outline-none" aria-label="Открыть меню">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path x-show="!mobileMenuOpen" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path><path x-show="mobileMenuOpen" x-cloak stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>
    </div>

    <!-- Мобилка -->
    <div x-show="mobileMenuOpen" x-cloak 
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 -translate-y-4"
            x-transition:enter-end="opacity-100 translate-y-0"
            class="lg:hidden bg-white border-b border-gray-100 absolute w-full left-0 z-50">
        <nav class="flex flex-col p-6 space-y-4 text-sm font-bold uppercase tracking-widest text-gray-600">
            <a href="index.html" class="{% if page.fileSlug == '' %}text-brand-darkBlue border-l-4 border-brand-golden pl-2 font-black{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Главная
            </a>
            <a href="services.html" class="{% if page.fileSlug == 'services' %}text-brand-darkBlue border-l-4 border-brand-golden pl-2 font-black{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Услуги
            </a>
            <a href="prices.html" class="{% if page.fileSlug == 'prices' %}text-brand-darkBlue border-l-4 border-brand-golden pl-2 font-black{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Цены
            </a>
            <a href="cases.html" class="{% if page.fileSlug == 'cases' %}text-brand-darkBlue border-l-4 border-brand-golden pl-2 font-black{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Кейсы
            </a>
            <a href="contacts.html" class="{% if page.fileSlug == 'contacts' %}text-brand-darkBlue border-l-4 border-brand-golden pl-2 font-black{% else %}hover:text-brand-darkBlue transition{% endif %}">
                Контакты
            </a>
            <button @click="$dispatch('open-modal'); mobileMenuOpen = false" class="italic bg-brand-coral text-white py-3 rounded-sm text-center">ЗАКАЗАТЬ 3D-ПЕЧАТЬ</button>
        </nav>
    </div>
</header>